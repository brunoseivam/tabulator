record(aSub, "$(P)$(R)_ASUB") {
    field(INAM, "sim_init")
    field(SNAM, "sim_proc")

    field(SCAN, "$(SCAN)")

    # Number of PVs to simulate
    field(FTA,  "LONG")
    field(INPA, {const: $(COUNT)})

    # Output configuration for each PV
    # The output can be either a table of scalars or a table of statistics
    # Table of scalars (below values should be OR'ed)
    #   0x01: timestamp user tag
    #   0x02: alarm severity
    #   0x04: alarm condition
    #   0x08: alarm message
    # Table of statistics:
    #   0x10: statitics table with the following columns:
    #         num_samples, min, max, mean, std, rms
    field(FTB,  "LONG")
    field(INPB, {const: $(CONFIG)})

    # Number of compressed samples
    # Used only in statistics table
    field(FTC,  "LONG")
    field(INPC, {const: $(NUM_SAMPLES)})

    # Time step (seconds)
    field(FTD,  "DOUBLE")
    field(INPD, {const: $(TIME_STEP_SEC)})

    # Number of rows per update
    field(FTE,  "LONG")
    field(INPE, {const: $(NUM_ROWS)})

    # Label separator
    field(FTF,  "STRING")
    field(INPF, {const: "$(LABEL_SEP=".")"})

    # Column separator
    field(FTG,  "STRING")
    field(INPG, {const: "$(COL_SEP="_")"})
}

